{
    "spec_dir": ".",
    "spec_files": [
      "**/*.test.?(m){ts,js}"
    ],
    "env": {
      "failSpecWithNoExpectations": false,
      "stopSpecOnExpectationFailure": false,
      "stopOnSpecFailure": false,
      "random": false
    },
    "reporters": [
    {
      "name": "JUnitXmlReporter",
      "options": {
        "savePath": "./results/",
        "filePrefix": "junit-results",
        "consolidateAll": false
      }
    }
  ]
}
